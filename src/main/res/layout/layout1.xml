<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首页"
        android:id="@+id/button"
        android:layout_gravity="bottom"
        android:layout_weight="0.28" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="控制中心"
        android:id="@+id/button2"
        android:layout_gravity="bottom"
        android:layout_weight="0.28"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="314dp"
        android:layout_height="213dp"
        android:id="@+id/jack2"
        android:src="@drawable/jack2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="107dp" />

    <ImageView
        android:layout_width="314dp"
        android:layout_height="213dp"
        android:id="@+id/jack3"
        android:src="@drawable/jack3"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button" />

    <ImageView
        android:layout_width="314dp"
        android:layout_height="213dp"
        android:id="@+id/jack5"
        android:src="@drawable/jack5"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/textView7"
        android:layout_alignTop="@+id/jack4" />
    <ImageView
        android:layout_width="314dp"
        android:layout_height="213dp"
        android:id="@+id/jack4"
        android:src="@drawable/jack4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignStart="@+id/jack2" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:id="@+id/button3"
        android:layout_gravity="bottom"
        android:layout_weight="0.28"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的"
        android:id="@+id/button4"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="温度:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="温度:"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView8"
        android:layout_toEndOf="@+id/button3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="温度:"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignStart="@+id/jack2"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="温度:"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/jack4"
        android:layout_alignStart="@+id/jack4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="湿度:"
        android:id="@+id/textView5"
        android:layout_toEndOf="@+id/jack4"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="湿度:"
        android:id="@+id/textView6"
        android:layout_above="@+id/textView2"
        android:layout_toEndOf="@+id/jack4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="湿度:"
        android:id="@+id/textView7"
        android:layout_toEndOf="@+id/jack3"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="湿度:"
        android:id="@+id/textView8"
        android:layout_toEndOf="@+id/jack5"
        android:layout_alignTop="@+id/jack5" />

</RelativeLayout>
